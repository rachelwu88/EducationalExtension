{
  "manifest_version": 3,
  "name": "Briefly",
  "version": "1.0",
  "description": "A Chrome extension that summarizes text and generates quizzes using ChatGPT API",
  "icons": {
    "48": "icon_48.jpeg"
  },
  "action": {
    "default_icon": {
      "48": "icon_48.jpeg"
    },
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "contextMenus"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": [
        "quiz.html",
        "quiz.css"
      ]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; frame-src 'self'; style-src 'self' 'unsafe-inline';"
  }
}
